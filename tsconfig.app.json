{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "vite-env.d.ts",
    "webapps-common/globals.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "lib/main.ts",
    "webapps-common/**/*",
    "webapps-common/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "webapps-common/**/__tests__/*",
    "webapps-common/demo/*"
  ],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "declarationDir": "dist",
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": false,
    "rootDirs": ["/"]
  }
}
